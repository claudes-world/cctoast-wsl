{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"--package=task-master-ai",
				"task-master-ai"
			],
			"env": {
				"ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
				"PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
			}
		},
		"sequential-thinking": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		},
		"context7": {
			"type": "sse",
			"url": "https://mcp.context7.com/sse"
		}
	}
}